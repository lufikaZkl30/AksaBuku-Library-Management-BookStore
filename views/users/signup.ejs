<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../layouts/header.ejs') %>
    <!-- css for login -->
    <link rel="stylesheet" href="/css/style.css">
    
</head>
<body>

    <div class="form-container">
        <h2>Signup</h2>
        <%- include('../partials/messages.ejs') %>
        <form action="/signup" method="POST">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="name" id="name" name="name" 
                class="form-control" placeholder="Name"
                value="<%= typeof name != 'undefined' ? name : '' %>"
                required autocomplete="off"/>
            </div>
            <div class="form-group">
                <label for="name">Username:</label>
                <input type="uname" id="uname" name="uname" 
                class="form-control"placeholder="Username (tanpa spasi)" 
                value="<%= typeof uname != 'undefined' ? uname : '' %>"
                required autocomplete="off" onkeypress="return event.charCode !== 32"/>
            </div>
            <div class="form-group">
                <label for="phone">Phone Number:</label>
                <input type="text" id="phone" name="phone" 
                class="form-control"placeholder="08xxxxxxx" 
                value="<%= typeof phone != 'undefined' ? phone : '' %>"
                required autocomplete="off">
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" name="email" id="email" 
                class="form-control" placeholder="Email" 
                value="<%= typeof email != 'undefined' ? email : '' %>" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" name="password" id="password" 
                class="form-control" placeholder="Password"
                value="<%= typeof password != 'undefined' ? password : '' %>" required>
            </div>
            <div class="form-group">
                <label for="password">Confirm Password:</label>
                <input type="password" name="password2" id="password2" 
                class="form-control" placeholder="Confirm Password" 
                value="<%= typeof password2 != 'undefined' ? password2 : '' %>" required>
            </div>
            <button type="submit" class="submit-btn">Signup</button>
        </form>

        <p>
            Sudah Punya Akun? <a href="/login">Login</a>
        </p>
    </div>
</body>
</html>